#!/bin/bash
CHAR="ðŸ’°"
OUTDIR="/tmp/emoji_fonts"
mkdir -p "$OUTDIR"

# Ð¡Ð¿Ð¸ÑÐ¾Ðº ÑˆÑ€Ð¸Ñ„Ñ‚Ð¾Ð², ÐºÐ¾Ñ‚Ð¾Ñ€Ñ‹Ðµ Ñ…Ð¾Ñ‚Ð¸Ð¼ Ð¿Ñ€Ð¾Ð²ÐµÑ€Ð¸Ñ‚ÑŒ
FONTS=(
    "Liberation Mono"
    "Symbols Nerd Font Mono"
    "Noto Color Emoji"
    "Unifont"
)

for f in "${FONTS[@]}"; do
    # pango-view Ð¾Ñ‚Ñ€ÐµÐ½Ð´ÐµÑ€Ð¸Ñ‚ ÑÐ¸Ð¼Ð²Ð¾Ð» Ð² PNG
    FILE="$OUTDIR/${f// /_}.png"
    pango-view --font="$f 64" --text="$CHAR" --no-fallback --no-display --dpi=96 --output="$FILE"
    echo "Rendered $CHAR with $f -> $FILE"
done
